{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build only",
      "type": "shell",
      "command": "sampctl package build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true,
        "revealProblems": "onProblem"
      },
      "problemMatcher": "$sampctl"
    },
    {
      "label": "build watcher",
      "type": "shell",
      "command": "sampctl package build --watch",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true,
        "revealProblems": "onProblem"
      },
      "problemMatcher": "$sampctl"
    },
    {
      "label": "run tests",
      "type": "shell",
      "command": "sampctl package run",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true,
        "revealProblems": "onProblem"
      },
      "problemMatcher": "$sampctl"
    },
    {
      "label": "run tests watcher",
      "type": "shell",
      "command": "sampctl package run --watch",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true,
        "revealProblems": "onProblem"
      },
      "problemMatcher": "$sampctl"
    }
  ]
}
